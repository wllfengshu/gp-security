<mapper namespace="app.wllfengshu.dao.ForgetDao" >

	<update id="forget" parameterType="String" >  
        update
        	t_user
        set
        	password = "Aa123456"
        where
        	username = #{username}
    </update>
   
   	<select id="getUserByEamil" parameterType="String" resultType="app.wllfengshu.entity.User" >
		SELECT 
			*
		FROM 
			t_user u
		WHERE 
			u.email = #{email}
	</select>
</mapper>